{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": [
        "assets/eforms/games/**",
        "assets/icomoon/**",
        "assets/eforms/unity/**",
        "assets/advent-calendar/**",
        "assets/memory-game/**"
    ],
    "globals": {
        "$": true,
        "confirm2": true,
        "toast": true,
        "getSwal": true,
        "confirm": true
    },
    "extends": ["eslint:recommended", "airbnb", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "import/no-extraneous-dependencies": "off",
        "func-names": "off",
        "no-plusplus": "off",
        "no-use-before-define": "off",
        "no-param-reassign": "off",
        "no-underscore-dangle": "off",
        "max-len": "off",
        "no-shadow": "off",
        "no-alert": "off",
        "no-continue": "off",
        "no-console": "off",
        "class-methods-use-this": "off",
        "consistent-return": "off",
        "no-multi-assign": "off",
        "no-nested-ternary": "off",
        "no-restricted-syntax": "off",
        "react/prop-types": "off",
        "react/no-danger": "off",
        "no-undef": "off"
    }
}
