{% extends 'espace-perso/layout.html.twig' %}

{% block titre 'Mes événements' %}
{% block meta_title 'Mes événements' %}

{% block title_after %}
    {% if is_granted(constant('\\App\\Security\\Voter\\EventVoter::CREATE')) %}
        <div class="text-center mt-2">
            <a class="btn btn-success" href="{{ path('app_event_new') }}">
                <twig:Icon name="lucide:plus" />
                Nouvel événement
            </a>
        </div>
    {% endif %}
{% endblock %}

{% block body -%}
    {% if events|length > 0 %}
        <div class="card">
            <div class="table-responsive">
                <table class="table card-table align-middle mb-0">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Lieu</th>
                        <th>Ville</th>
                        <th>Date</th>
                        <th>Visible</th>
                        <th>Annulé</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                        <tr>
                            <td>
                                <a href="{{ path('app_event_edit', {id: event.id}) }}" title="Accéder à l'événement">{{ event.name }}</a>
                            </td>
                            <td>{{ event.placeName }}</td>
                            <td>{{ event.placeCity }}</td>
                            <td>
                                <twig:Dates from="{{ event.startDate }}" to="{{ event.endDate }}" />
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input draft" data-href="{{ path('api_event_draft', {id: event.id}) }}" type="checkbox" {{ not event.draft ? 'checked' }} id="draft-event-{{ event.id }}">
                                    <label class="form-check-label" for="draft-event-{{ event.id }}">&nbsp;</label>
                                </div>
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input cancel" data-href="{{ path('api_event_cancel', {id: event.id}) }}" type="checkbox" {{ event.status ? 'checked' }} id="cancel-event-{{ event.id }}">
                                    <label class="form-check-label" for="cancel-event-{{ event.id }}">&nbsp;</label>
                                </div>
                            </td>
                            <td class="actions">
                                <div class="btn-group btn-group-icon-sm">
                                    <a class="btn btn-icon btn-unstyled" href="{{ path('app_event_details', {slug: event.slug, id: event.id, location: event.locationSlug}) }}" data-bs-toggle="tooltip" title="Voir l'événement">
                                        <twig:Icon name="lucide:eye" class="text-secondary" />
                                    </a>
                                    <a class="btn btn-icon btn-unstyled" href="{{ path('app_event_edit', {id: event.id}) }}" data-bs-toggle="tooltip" title="Corriger l'événement">
                                        <twig:Icon name="lucide:pencil" class="text-primary" />
                                    </a>
                                    <button type="button" class="btn btn-icon btn-unstyled" data-target=".form-delete-{{ event.id }}" data-bs-toggle="tooltip" title="Supprimer l'événement">
                                        <twig:Icon name="lucide:trash-2" class="text-danger" />
                                    </button>
                                </div>
                                <form class="d-none form-delete-{{ event.id }}" method="post" action="{{ path('app_event_delete', {id: event.id}) }}">
                                    <input name="_method" type="hidden" value="DELETE">
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% if events.nbPages > 1 %}
                <div class="card-footer d-flex align-items-center">
                    {{ pagerfanta(events) }}
                </div>
            {% endif %}
        </div>
    {% else %}
        <div class="alert alert-info">
            <twig:Icon name="lucide:info" />
            Aucun événement créé, publiez dès maintenant le vôtre !
        </div>
    {% endif %}
{%- endblock %}

{% block css -%}
    {{ encore_entry_link_tags('espace_perso_list') }}
{%- endblock %}

{% block js -%}
    {{ encore_entry_script_tags('espace_perso_list') }}
{%- endblock %}

{% block modals %}
    <div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="feedbackModalLabel">Donnez-nous votre avis</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted mb-3">
                        Nous avons récemment mis à jour le système de gestion de vos événements.
                        Votre avis nous aide à améliorer l'expérience !
                    </p>
                    <form id="feedback-form" data-action="{{ path('api_feedback') }}">
                        <div class="mb-3">
                            <label for="feedback-message" class="form-label">Votre message</label>
                            <textarea class="form-control" id="feedback-message" rows="5" placeholder="Partagez votre avis sur le nouveau système..." required minlength="10"></textarea>
                            <div class="invalid-feedback" id="feedback-error"></div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="submit" form="feedback-form" class="btn btn-primary">
                        <twig:Icon name="lucide:send" />
                        Envoyer
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
