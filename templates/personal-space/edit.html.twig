{% extends 'personal-space/new.html.twig' %}

{% block meta_title event.name %}
{% block title event.name %}

{% block breadcrumb_personal_space -%}
    {% do menu.addItem(event.name, url('app_event_edit', {id: event.id})) %}
{%- endblock %}

{% block body_form %}
    {{ parent() }}
    <div class="mt-4 form-delete">
        <form method="post" action="{{ path('app_event_delete', {id: event.id}) }}">
            <input name="_method" type="hidden" value="DELETE">
            <button type="submit" class="btn btn-danger">
                <twig:Icon name="lucide:trash-2" />
                Supprimer
            </button>
        </form>
    </div>
{% endblock %}
