{% props user, width, height = null, lazy = false, placeholder = true, priority = false, wrapperAttr = {}, fit = 'crop', objectFit = null, aspectRatio = null %}
{{ image({
    user: user,
    loader: 'user',
    width: width,
    height: height,
    fit: fit,
    objectFit: objectFit,
    aspectRatio: aspectRatio,
    placeholderPriority: lazy,
    placeholder: placeholder,
    priority: priority,
    wrapperAttr: {
        class: 'rounded-circle',
    }|merge(wrapperAttr),
    attr: {
        alt: user.username,
        title: user.username,
    },
}) }}
