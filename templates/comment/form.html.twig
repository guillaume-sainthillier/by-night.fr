{% import 'form/macros.html.twig' as macros %}
{% if is_granted('ROLE_USER') %}
    {{ form_start(form) }}

    <div class="comment-form-user">
        {{ macros.userLazyThumb(app.user, 75, 75) }}
        <strong>{{ app.user.username }}</strong>
    </div>
    <div class="comment-form-input">
        {% block form_comment %}
            {{ form_row(form.comment, {
                attr: {
                    placeholder: 'Ã‰crire un commentaire...',
                    rows: 3,
                },
            }) }}
        {% endblock %}
        <button type="submit" class="btn btn-primary btn-submit">Envoyer</button>
    </div>
    {{ form_rest(form) }}
{% else %}
    <div class="text-center">
        <a class="btn btn-outline-secondary connexion" title="Se connecter pour laisser un commentaire"
           href="{{ path('app_login') }}">
            Laisser un commentaire
        </a>
    </div>
{% endif %}
