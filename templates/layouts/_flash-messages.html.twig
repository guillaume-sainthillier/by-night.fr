{% for key, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ key == 'error' ? 'danger' : key }}">
            <div class="container-lg">
                {% if key == 'info' %}
                    <twig:Icon name="lucide:info" />
                {% elseif key == 'error' %}
                    <twig:Icon name="lucide:triangle-alert" />
                {% elseif key == 'success' %}
                    <twig:Icon name="lucide:check" />
                {% endif %}
                {{ message|trans|raw }}
            </div>
        </div>
    {% endfor %}
{% endfor %}
