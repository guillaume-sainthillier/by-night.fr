{% extends 'layouts/stretch.html.twig' %}
{% set eventShortName = event_seo.getEventShortTitle(event) %}
{% set schedules = event_seo.getEventDateTime(event) %}
{% set eventDescription = event.description|parse_tags|raw %}
{% set original = eventProfilePicture.originalPicture(event) %}

{% set place = event.place %}
{# Collect all tags (category + themes) for meta tags #}
{% set allTags = [] %}
{% if event.category %}
    {% set allTags = allTags|merge([event.category]) %}
{% endif %}
{% for tag in event.themes %}
    {% set allTags = allTags|merge([tag]) %}
{% endfor %}

{% block page_id 'page-event' %}
{% block meta_title event_seo.eventFullTitle(event) %}
{% block title event_seo.eventFullTitle(event) %}

{% block breadcrumb %}
    {% if location.isCountry %}
        {% do menu.addItem(location.country.displayName, url('app_location_index', {location: location.country.slug})) %}
    {% else %}
        {% do menu.addItem(location.city.country.displayName, url('app_location_index', {location: location.city.country.slug})) %}
        {% do menu.addItem('Sortir à ' ~ event.placeCity, url('app_agenda_index', {location: location.city.slug})) %}
    {% endif %}

    {% do menu.addItem(event.placeName, url('app_agenda_by_place', {location: location.slug, placeSlug: place.slug})) %}
    {% do menu.addItem(event.name, url('app_event_details', {slug: event.slug, id: event.id, location: event.locationSlug})) %}
{% endblock %}

{% block meta_keywords %}{% if allTags|length > 0 %}{{ allTags|map(t => t.name)|join(',') }},{% endif %}{{ parent() }}{% endblock %}
{% block meta_description event_seo.eventDescription(event) %}

{% block metas %}
    <link rel="image_src" href="{{ original }}" />
    <meta property="article:published_time" content="{{ event.createdAt.format('Y-m-d') }}" />
    <meta property="article:publisher" content="https://www.facebook.com/pages/By-Night/{{ social_manager.facebookIdPage }}" />
    {% if event.user %}
        <meta property="article:author" content="{{ url('app_user_index', {id: event.user.id, slug: event.user.slug}) }}" />
    {% endif %}

    {% for tag in allTags %}
        <meta property="article:tag" content="{{ tag.name }}" />
    {% endfor %}
{% endblock %}

{% block og_title eventShortName %}
{% block og_url url('app_event_details', {slug: event.slug, id: event.id, location: event.locationSlug}) %}
{% block og_image original %}

{% block json_ld %}
    {{ event_json_ld(event) }}
{% endblock %}

{% block body -%}
    {% if event.draft %}
        <div class="alert alert-warning">
            <twig:Icon name="lucide:triangle-alert" />
            Cet événement n'est pas encore disponible publiquement. Merci de patienter encore un peu !
        </div>
    {% else %}
        <div class="card" id="event">
            <div class="row g-0">
                {% if event.status or event.statusMessage %}
                    <div class="col-12">
                        <twig:EventStatusAlert event="{{ event }}" prefix="Informations de dernière minute : " />
                    </div>
                {% endif %}
                <div class="col-lg-7">
                    <a class="image-gallery" href="{{ original }}" title="{{ eventShortName }}">
                        <twig:EventThumb event="{{ event }}" width="{{ 800 }}" placeholderPriority="{{ true }}" class="img" />
                    </a>
                </div>
                <div class="col-lg-5 event-details">
                    <div class="card-body">
                        <div class="detail-item">
                            <twig:Icon name="lucide:calendar-days" />
                            <h2>
                                {% if event.endDate == null or event.startDate == event.endDate %}
                                    Le
                                    <time datetime="{{ event.startDate|date('Y-m-d\\TH:i:sO') }}">{{ event.startDate|format_date('full') }}</time>
                                {% else %}
                                    Du
                                    <time datetime="{{ event.startDate|date('Y-m-d\\TH:i:sO') }}">{{ event.startDate|format_date('full') }}</time>
                                    au
                                    <time datetime="{{ event.endDate|date('Y-m-d\\TH:i:sO') }}">{{ event.endDate|format_date('full') }}</time>
                                {% endif %}
                            </h2>
                        </div>

                        {% if event.hours %}
                            <div class="detail-item">
                                <twig:Icon name="lucide:clock" />
                                <p>{{ event.hours }}</p>
                            </div>
                        {% endif %}

                        {% if event.timesheets|length > 1 %}
                            <div class="detail-item">
                                <twig:Icon name="lucide:calendar-days" />
                                <div>
                                    <div class="mb-1">Détail des dates :</div>
                                    <div class="timesheets-list">
                                        {% for timesheet in event.timesheets %}
                                            <div class="timesheet-entry">
                                                {% if timesheet.startAt|date('Y-m-d') == timesheet.endAt|date('Y-m-d') %}
                                                    Le
                                                    <time datetime="{{ timesheet.startAt|date('Y-m-d\\TH:i:sO') }}">
                                                        {{ timesheet.startAt|format_date('full') }}
                                                    </time>
                                                {% else %}
                                                    Du
                                                    <time datetime="{{ timesheet.startAt|date('Y-m-d\\TH:i:sO') }}">
                                                        {{ timesheet.startAt|format_date('full') }}
                                                    </time>
                                                    au
                                                    <time datetime="{{ timesheet.endAt|date('Y-m-d\\TH:i:sO') }}">
                                                        {{ timesheet.endAt|format_date('full') }}
                                                    </time>
                                                {% endif %}
                                                {% if timesheet.hours %}
                                                    <span class="text-muted">({{ timesheet.hours }})</span>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        <div class="detail-item">
                            {% if event.placeName %}
                                <twig:Icon name="lucide:map-pin" />
                            {% endif %}
                            <div>
                                {% set mapParameter = 'place?q=' %}
                                {% set mapValue = '' %}
                                {% if event.placeName %}
                                    {% set mapValue = event.placeName %}
                                    <h2 class="mb-0">
                                        <strong class="font-weight-normal">{{ event.placeName }}</strong>
                                    </h2>
                                {% endif %}

                                {% if event.placeCity %}
                                    <div>
                                        {% if event.placeStreet %}
                                            <div>{{ event.placeStreet }}</div>
                                        {% endif %}

                                        {% if event.placeCity or event.placePostalCode %}
                                            <div>
                                                {% if event.placePostalCode %}
                                                    <span>{{ event.placePostalCode }}</span>
                                                {% endif %}

                                                {% if event.placeCity %}
                                                    {% set mapValue = mapValue ~ ' ' ~ event.placeCity %}
                                                    {% if event.place and event.place.city %}
                                                        <strong class="font-weight-normal">{{ event.placeCity }}</strong>
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}

                                {% if event.latitude and event.longitude %}
                                    {% if not place.city %}
                                        {% set mapParameter = 'place?q=' %}
                                        {% set mapValue = event.latitude ~ ',' ~ event.longitude %}
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>

                        {% if event.prices %}
                            <div class="detail-item">
                                <twig:Icon name="lucide:ticket" />
                                <p>{{ event.prices }}</p>
                            </div>
                        {% endif %}

                        {% if event.affiliate %}
                            <div class="detail-item">
                                <div>
                                    <p>
                                        <a href="{{ event.source }}" class="btn btn-block btn-primary" rel="sponsored">Je prends vite mes billets</a>
                                    </p>
                                    <small class="text-muted mt-2">Avec {{ event.fromData }}</small>
                                </div>
                            </div>
                        {% endif %}
                        {% if event.user %}
                            <div class="detail-item">
                                <twig:Icon name="lucide:user" />
                                <p>
                                    Par
                                    <a href="{{ path('app_user_index', {id: event.user.id, slug: event.user.slug}) }}"
                                       title="Les événements de {{ event.user.username }}">
                                        {{ event.user.username }}
                                    </a>
                                </p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="card-header card-header-border-top">
                {{ include('location/hinclude/trends.html.twig', {trendsData: trendsData}) }}
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-8">
                        {{ eventDescription|raw }}
                    </div>
                    <div class="col-sm-4 my-3 my-md-0 event-details">
                        {% for phoneContact in event.phoneContacts %}
                            <div class="detail-item">
                                <twig:Icon name="lucide:phone" />
                                <p class="one-line">
                                    <a href="tel:{{ phoneContact }}">{{ phoneContact }}</a>
                                </p>
                            </div>
                        {% endfor %}
                        {% for websiteContact in event.websiteContacts %}
                            <div class="detail-item">
                                <twig:Icon name="lucide:globe" />
                                <p class="one-line">
                                    <a rel="nofollow" href="{{ websiteContact|ensure_protocol }}">{{ websiteContact }}</a>
                                </p>
                            </div>
                        {% endfor %}
                        {% for mailContact in event.mailContacts %}
                            <div class="detail-item">
                                <twig:Icon name="lucide:mail" />
                                <p class="one-line">
                                    <a href="mailto:{{ mailContact }}">{{ mailContact }}</a>
                                </p>
                            </div>
                        {% endfor %}
                        {% if event.facebookEventId %}
                            <div class="detail-item">
                                <twig:Icon name="fa7-brands:facebook-f" />
                                <p class="one-line">
                                    {% set lien = 'https://www.facebook.com/events/' ~ event.facebookEventId %}
                                    <a href="{{ lien }}" rel="nofollow">{{ lien }}</a>
                                </p>
                            </div>
                        {% endif %}

                        <div class="detail-item">
                            <twig:Icon name="lucide:tags" />
                            <p class="tags">
                                {% if event.place.country %}
                                    <a class="badge text-bg-info"
                                       title="Sortir {{ event.place.country.atDisplayName }}"
                                       href="{{ path('app_agenda_index', {location: event.place.locationSlug}) }}">
                                        <strong class="font-weight-normal">Événements {{ event.place.country.atDisplayName }}</strong>
                                    </a>
                                {% endif %}

                                {% if event.place.location.isCity and event.placeName != event.place.location.name %}
                                    <a class="badge text-bg-info"
                                       title="Sortir {{ event.place.location.atName }}"
                                       href="{{ path('app_agenda_index', {location: event.place.locationSlug}) }}">
                                        <strong class="font-weight-normal">Événements {{ event.place.location.atName }}</strong>
                                    </a>
                                {% endif %}
                                {% if event.placeName %}
                                    <a class="badge text-bg-info"
                                       title="Sortir à {{ event.placeName }}"
                                       href="{{ path('app_agenda_by_place', {placeSlug: event.place.slug, location: event.place.locationSlug}) }}">
                                        <strong class="font-weight-normal">Événements à {{ event.placeName }}</strong>
                                    </a>
                                {% endif %}

                                {% for tag in allTags %}
                                    <a class="badge text-bg-info"
                                       title="{{ tag.name }} {{ event.place.location.atName }}"
                                       href="{{ path('app_agenda_by_tag', {tagSlug: tag.slug, tagId: tag.id, location: event.place.locationSlug}) }}">
                                        <strong class="font-weight-normal">{{ tag.name }} {{ event.place.location.atName }}</strong>
                                    </a>
                                {% endfor %}
                            </p>
                        </div>

                        {% if event.source %}
                            <div class="detail-item">
                                <twig:Icon name="lucide:info" />
                                <p>
                                    Source : <a href="{{ event.source }}" target="_blank" rel="nofollow">{{ event.fromData }}</a>
                                </p>
                            </div>
                        {% endif %}

                        {% set maPatisserieDisplayed = false %}
                        {% for word in ['patisserie', 'pâtisserie', 'chocolat', 'gateau', 'gâteau', 'atelier culinaire'] %}
                            {% if not maPatisserieDisplayed and (word in event.description|lower or word in event.name|lower) %}
                                {% set maPatisserieDisplayed = true %}
                                <div class="detail-item">
                                    <twig:Icon name="lucide:cake" />
                                    <p>
                                        <a href="https://mapatisserie.fr">Blog de pâtisserie</a>
                                    </p>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% if mapValue %}
                <div class="card-body p-0 text-center">
                    <div class="card-body">
                        <button
                                class="btn btn-outline-primary"
                                id="loadMap"
                                data-map="https://www.google.com/maps/embed/v1/{{ mapParameter }}{{ mapValue|raw|url_encode }}&key={{ googleMapKey }}&zoom=16">
                            Afficher sur une carte
                        </button>
                    </div>
                    <div id="googleMap"></div>
                </div>
            {% endif %}
        </div>

        {# Comments section - separate card outside main event card #}
        {{ include('comment/list-and-form.html.twig', {event: event, comments: comments, form: commentForm}) }}

        {% if event.placeName and nextEventsData %}
            {{ include('location/widget/next-events.html.twig', {nextEventsData: nextEventsData}) }}
        {% endif %}

        <!-- Événements similaires -->
        {{ include('location/widget/similar-events.html.twig') }}
        <!-- ./Événements similaires -->

    {% endif %}
{%- endblock %}

{% block css %}
    {{ encore_entry_link_tags('event_details') }}
{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('event_details') }}
{% endblock %}
