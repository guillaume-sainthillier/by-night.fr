{{ fos_httpcache_tag(tags('trends', event)) }}

<div class="btn-group">

    <button type="button" href="{{ not is_granted('IS_AUTHENTICATED_REMEMBERED') ? path('app_login') : '#' }}"
            class="btn btn-unstyled participer btn-like-event {{ participer ? 'btn-primary' }} {{ not is_granted('IS_AUTHENTICATED_REMEMBERED') ? ' connexion' }}"
            data-href="{{ path('app_user_like', {'id' : event.id}) }}">
        <i class="icon fa fa-heart"></i>
    </button>
    <button class="btn btn-unstyled dropdown-toggle" type="button" data-bs-toggle="dropdown">
        <i class="icon fa fa-share-alt"></i>
    </button>
    <div class="dropdown-menu dropdown-menu-start">
        {% for name, social in shares %}
            <a href="{{ social.shareUrl }}" class="dropdown-item popup {{ name }}">
                <span>
                    <i class="icon fab fa-{{ name }}"></i>
                    Partager avec {{ name|upper }}
                </span>
            </a>
        {% endfor %}
    </div>
</div>

<small class="ms-3 text-muted {{ count == 0 ? 'd-none' }}">{{ count }} intérêt{{ count > 1 ? 's' }}</small>
