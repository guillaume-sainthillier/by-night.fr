{% set currentType = type %}
{% set options = {
    '': 'Tout le site',
    'evenements': 'Les événements',
    'membres': 'Les membres',
} %}

{%- block search -%}
    <div class="row">
        <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
            <div class="card">
                <div class="card-body">
                    <form method="GET" class="no-margin-form" action="{{ path('app_search_index') }}">
                        <div class="row">
                            <div class="col-md-6 col-lg-8">
                                <div class="mb-3">
                                    <label for="search">Je cherche</label>
                                    {% embed 'components/input-icon.html.twig' with({
                                        iconPrepend: 'search'
                                    }) %}
                                        {% block body %}
                                            <input name="q"
                                                   id="search"
                                                   class="form-control"
                                                   type="search"
                                                   value="{{ term }}">
                                        {% endblock %}
                                    {% endembed %}

                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <div class="mb-3">
                                    <label for="type">Parmi</label>
                                    <select id="type" name="type" class="form-select">
                                        {% for value, label in options %}
                                            <option value="{{ value }}" {{ value == currentType ? 'selected' }}>{{ label }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <input class="btn btn-primary btn-raised" type="submit" value="Rechercher" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {% if term %}
        <h2>
            {% if result.count == 0 %}Aucun{% else %}{{ result.count }}{% endif %}
            {{ result.label }}{{ s }} trouvé{{ s }}
        </h2>
        {% if events.nbResults > 0 and (not type or type == 'evenements') %}
            {% if type != 'evenements' %}
                {% set s = events.nbResults > 1 ? 's': null %}
                <h3>Événement{{ s }} <span class="badge bg-info number number-sm">{{ events.nbResults }}</span>
                </h3>
            {% endif %}
            {% include 'search/content-events.html.twig' %}
        {% endif %}

        {% if users.nbResults > 0 and (not type or type == 'membres') %}
            {% if type != 'membres' %}
                {% set s = users.nbResults > 1 ? 's': null %}
                <h3>Membre{{ s }} <span class="badge bg-info number number-sm">{{ users.nbResults }}</span></h3>
            {% endif %}
            {% include 'search/content-users.html.twig' %}
        {% endif %}
    {% endif %}
{%- endblock -%}
