{% extends 'layouts/default.html.twig' %}

{% if not type %}
    {% set titre = 'Recherche d\'événements, lieux et membres' %}
    {% set title = 'Recherche' %}
    {% set description = 'Recherche d\'événements, concerts, spectacles et membres' %}
    {% set result = {count: (events.totalItemCount + users.totalItemCount), label: 'résultat'} %}
    {% set nom = 'Tout' %}
{% elseif type == 'evenements' %}
    {% set titre = 'Recherche d\'événements' %}
    {% set title = 'Recherche d\'événements' %}
    {% set description = 'Recherche d\'événements, concerts, spectacles, sorties' %}
    {% set result = {count: events.totalItemCount, label: 'événement'} %}
    {% set nom = 'Événements' %}
{% elseif type == 'membres' %}
    {% set titre = 'Recherche de membres' %}
    {% set title = 'Recherche de membres' %}
    {% set result = {count: users.totalItemCount, label: 'membre'} %}
    {% set description = titre %}
    {% set nom = 'Membres' %}
{% endif %}

{% if term %}{% set title = term %}{% endif %}

{% block breadcrumb %}
    {% do menu.addItem('Recherche', url('app_search_query')) %}

    {% if type %}
        {% do menu.addItem(nom, url('app_search_query', {'type': type})) %}
    {% endif %}

    {% if term %}
        {% do menu.addItem(term, url('app_search_query', {'q': term, 'type': type})) %}
    {% endif %}

    {% if page > 1 %}
        {% do menu.addItem('Page ' ~ page, url('app_search_query', {'page': page, 'q': term, 'type': type})) %}
    {% endif %}
{% endblock %}

{% set s = result.count > 1 ? 's': null %}
{% if term %}
    {% set description = description ~ '. ' ~ result.count ~ ' ' ~ result.label ~ s ~ ' trouvé' ~ s ~ ' pour la recherche "' ~ term ~ '"' %}
{% endif %}

{% block title title %}
{% block titre titre %}
{% block meta_description description %}

{% block body %}
    {% include 'search/_index-content.html.twig' %}
{% endblock %}

{% block css -%}
    {{ encore_entry_link_tags('search') }}
{%- endblock %}

{% block js -%}
    {{ encore_entry_script_tags('search') }}
{%- endblock %}
